<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragemnts_signup.EnterPhoneNumber">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Your informations"
        android:id="@+id/description"
        android:textColor="@color/color_1_page_singin"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:layout_below="@id/description"
        android:id="@+id/password_text"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_text"
        android:id="@+id/password_edit"
        android:hint="••••••••"
        android:textColorHint="@color/color_1_page_singin"
        android:inputType="textPassword"
        android:backgroundTint="@color/color_2_page_singin"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/secondly"
        android:layout_below="@id/password_edit"
        android:id="@+id/passworderrorEditText"
        android:clickable="false"
        android:focusable="false"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:layout_below="@id/passworderrorEditText"
        android:id="@+id/password_text2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_text2"
        android:id="@+id/password_edit2"
        android:hint="••••••••"
        android:textColorHint="@color/color_1_page_singin"
        android:inputType="textPassword"
        android:backgroundTint="@color/color_2_page_singin"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/secondly"
        android:layout_below="@id/password_edit2"
        android:id="@+id/passworderrorEditText2"
        android:clickable="false"
        android:focusable="false"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passworderrorEditText2"
        android:layout_marginTop="43dp"
        app:cornerRadius="10dp"
        android:backgroundTint="@color/back_continue_singin"
        android:paddingVertical="10dp"
        android:text="Create an account"
        android:textAllCaps="false"
        android:textColor="@color/txt_continue_singin" />

</RelativeLayout>