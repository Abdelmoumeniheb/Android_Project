<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".Welcome">

    <ImageView
        android:id="@+id/img_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/img_welcomeactivity"
    />
    <RelativeLayout
        android:id="@+id/firstRelative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_welcome"
        android:background="@color/primary"
        android:padding="20dp"
        >
        <TextView
            android:id="@+id/first_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_txt_welcome_actv"
            android:textColor="@color/white"
            android:textSize="24sp"
        />
        <TextView
            android:id="@+id/second_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/first_txt_welcome_actv"
            android:textColor="@color/second_blue"
            android:textSize="12sp"
            android:layout_below="@id/first_txt"
            />
    </RelativeLayout>
    <Button
        style="@style/Widget.Material3.Button"
        android:id="@+id/btnSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/first_btn_txt_welcome_actv"
        app:cornerRadius="10dp"

        android:backgroundTint="@color/secondly"
        android:layout_below="@id/firstRelative"
        android:textColor="@color/white"
        android:paddingVertical="10dp"
        android:textAllCaps="false"
        />
    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in"
        app:cornerRadius="10dp"
        app:strokeColor="@color/secondly"
        android:layout_below="@id/btnSignUp"
        android:backgroundTint="@android:color/white"
        app:strokeWidth="1dp"
        android:textColor="@android:color/holo_red_light"
        android:textAllCaps="false"/>
    <Button
        android:id="@+id/google_btn"
        style="@style/Widget.Material3.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:backgroundTint="@color/white"
        app:strokeColor="#E1E1E1"
        app:cornerRadius="10dp"
        app:strokeWidth="1dp"
        android:layout_height="wrap_content"
        android:text="@string/third_btn_txt_welcome_actv"
        android:textColor="@color/black"
        android:layout_below="@id/btnLogin"
        app:icon="@drawable/icongoogle"
        app:iconGravity="textStart"
        app:iconSize="20dp"
        app:iconTint="@null"
        android:textAllCaps="false"/>
</RelativeLayout>